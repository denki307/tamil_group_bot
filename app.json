{
  "name": "Tamil Group Moderation Bot",
  "description": "Telegram Tamil Group",
  "repository": "https://github.com/denki307/tamil_group_bot",
  "keywords": [
    "telegram",
    "tamil",
    "group",
    "moderation",
    "bot",
    "mongodb",
    "gban",
    "sudo"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token (from @BotFather)",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection string (mongodb+srv://...)",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram Owner User ID",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
